extends layout
block page
  div.jumbotron.container
    div.page-header
      h1 Stock Prices Comparison
    div.row
      div.card.col-xs-12#chart-container
    div#companies.row
      form#search-form.form.card.col-xs-12(action="")
        label(for="search-input") Syncs in real-time across clients
        div.input-group
          input#search-input.form-control(type="text", autocomplete="off", placeholder="Search by ticker symbol")
          span.input-group-btn
            button.btn.btn-secondary(type="submit") Add
    footer
      a(href="https://github.com/elisecode247/share-stocks-chart") @elisecode247
